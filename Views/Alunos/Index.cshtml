@model IEnumerable<AlunoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Alunos Matriculados</h1>

<p>
    <a asp-action="Create">Novo Aluno</a>
</p>
<hr>

<partial name="_Mensagem" />

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-clientes">
        <thead>
            <tr>
                <th>Nome</th>
                <th>CPF</th>
                <th>E-mail</th>
                <th>Idade</th>
                <th>Curso</th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr>
                    <td>@aluno.NomeCompleto</td>
                    <td>@aluno.CPF</td>
                    <td>@aluno.Email</td>
                    <td>@aluno.Idade</td>
                    <td>@aluno.Curso.NomeCurso</td>
                   

                    <td>
                        <a asp-action="Create" asp-route-id="@aluno.IdAluno" class="btn btn-sm btn-secondary"><i class="bi-pencil" title="Alterar"></i></a>
                        <a asp-action="Delete" asp-route-id="@aluno.IdAluno" class="btn btn-sm btn-danger"><i class="bi-trash" title="Excluir"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum cliente cadastrado.</p>
}