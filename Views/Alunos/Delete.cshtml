@model AlunoModel
@{
    ViewBag.Subtitulo = "Exclusão de Produto";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<h4>Deseja realmente excluir o Aluno <span class="text-danger">@Model.NomeCompleto?</span></h4>


<form asp-action="Delete" class="w-25">
    <input type="hidden" asp-for="@Model.IdAluno">
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-success">Não</a>
        <button class="btn btn-danger" type="submit">Sim</button>
    </div>
</form>